<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Event Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Event Management"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Event Date -->
    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date: YYYY/MM/DD"
        android:textColor="#FF8473"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Event Price -->
    <TextView
        android:id="@+id/tvEventPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $00"
        android:textColor="#FF8473"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventDate"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Event Description -->
    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event details...."
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Waiting List Section -->
    <TextView
        android:id="@+id/tvWaitingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People in Waiting List"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventDescription"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Placeholder for Waiting List Avatars/Icons -->
    <LinearLayout
        android:id="@+id/linearWaitingListAvatars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWaitingList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Delete Event Button -->
    <Button
        android:id="@+id/btnDeleteEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Event"
        android:backgroundTint="#E57373"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>