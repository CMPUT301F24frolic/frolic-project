<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back Button -->
    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#5DB075"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Screen Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Facility"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Listed Events Section -->
    <TextView
        android:id="@+id/tvListedEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listed Events"
        android:background="#FFF0E0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvEventCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02"
        android:textColor="#FF9800"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvListedEvents"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- List of Events (Placeholder) -->
    <LinearLayout
        android:id="@+id/llEventList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvEventCount"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event 1"
            android:padding="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event 2"
            android:padding="16dp" />

    </LinearLayout>

    <!-- Browse Profiles Button -->
    <Button
        android:id="@+id/btnBrowseProfiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Browse Profiles"
        android:backgroundTint="#5DB075"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnDeleteFacility"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Delete Facility Button -->
    <Button
        android:id="@+id/btnDeleteFacility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Facility"
        android:backgroundTint="#FF8473"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Bottom Navigation for Admin Actions -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
